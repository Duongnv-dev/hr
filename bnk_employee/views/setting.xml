<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_employee" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.employee</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="71"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']/div[1]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" title="">
                    <div class="o_setting_right_pane">
                        <label for="days"/>
                        <div class="col-6">
                            <field name="days"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>